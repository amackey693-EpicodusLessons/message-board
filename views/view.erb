<h3>Board Name: <%= @board.name %></h3>
<h3>Topic: <%= @board.topic %></h3> 
<h3>Author: <%= @board.author %></h3>


<h4>User Comments: </h4>
 <% if @board.comments.any? %>
  <% @board.comments.each do |c| %>
   <h4>"<%= c.comment %>"</h4>
   <p>Author: <%= c.author %> || Time: <%= c.timestamp %> || <a href="/homepage/<%= c.board.id %>/comments/<%= c.id %>"> Edit </a></p>
  <% end %>
<% else %>
 <p>There are no comments to display at this time!</p>
<% end %>


<h4>Add a comment:</h4>

<form action="/homepage/<%= @board.id %>/comments" method="post">
  <div class="form-group">
    <label for="comment">Add Comment/Message:</label>
    <input id="comment" name="comment" class="form-control" type="text">
    <label for="author">Enter your name:</label>
    <input id="author" name="author" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Submit</button>
</form>

<p><a href="/homepage">Return to the homepage!!</a></p>
